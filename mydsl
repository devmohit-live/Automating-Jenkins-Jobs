
job("job1")
{
  description("pull the code")
  scm
  { github('devmohit-live/Automation_Kubernetes','master') }
  triggers
  {
  scm("* * * * *") } 
steps{
shell("sudo rm -frv /root/data")
shell("sudo mkdir /root/data")
shell("sudo cp * -frv /root/data")
}
}
 
job("job2")
{
  description("check the launch the deployment")
triggers{  
upstream {
upstreamProjects("job1")
threshold("SUCCESS")
}
}  
steps{
shell("cd /root/data")
shell("if sudo ls | grep php; then; sudo kubectl run myweb --image=php:latest; sudo kubectl expose pods myweb --port=80 --type=NodePort; sudo kubectl cp /root/data myweb:/usr/src/myapp; else; sudo kubectl run myweb --image=httpd:latest; sudo kubectl expose pods myweb --port=80 --type=NodePort; sudo kubectl cp /root/data myweb:/usr/local/apache2/htdocs; fi")
}  
}

job("job3")
{
description("Monitor whether the app is working or not")
triggers{  
upstream {
upstreamProjects("job2")
threshold("SUCCESS")
}
} 
steps {
  script {
    response = sh(
      returnStdout: true, 
      script: "status=curl -o /dev/null -s -w %{http_code} 192.168.99.101");
shell("if sudo '/$status' == '200'; then; exit 1; else; exit 0; fi")
}
}

job("job4")
{
description("validate the application")
triggers{  
upstream {
upstreamProjects("job3")
threshold("SUCCESS")
}
steps{
shell("sudo python3 /root/mail.py")
}
}}


